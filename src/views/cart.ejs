<div class="wrapper">
    <div class="section">
        <div class="container">
            <div id="contentAreas" class="cd-section">
                <h3 class="title">Shopping Cart</h3>
                <!--                 tables -->
                <div id="tables">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-plain">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-shopping">
                                            <thead class="">
                                            <tr><th class="text-center">
                                                </th>
                                                <th>
                                                    Product
                                                </th>
                                                <th></th>
                                                <th></th>
                                                <th class="text-right">
                                                    Price
                                                </th>
                                                <th class="text-right">
                                                    Qty
                                                </th>
                                                <th class="text-right">
                                                    Amount
                                                </th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <%
                                                let total = 0;
                                                cart.forEach(ele => {
                                            %>
                                            <tr>
                                                <td>
                                                    <div class="img-container">
                                                        <img src="/public/resources/images/<%= ele.product[0].img_url %>" alt="...">
                                                    </div>
                                                </td>
                                                <td class="td-name">
                                                    <a href="/product/<%= ele.product[0]._id %>"><%= ele.product[0].name %></a>
                                                    <br>
                                                    <small>by <%= ele.product[0].author %></small>
                                                </td>
                                                <td></td>
                                                <td></td>
                                                <td class="td-number">
                                                    <%= ele.product[0].price.toLocaleString() %><small>đ</small>
                                                </td>
                                                <td class="td-number">
                                                    <%= ele.amount %>
                                                    <div class="btn-group">
                                                        <button class="btn btn-info btn-sm"> <i class="now-ui-icons ui-1_simple-delete"></i> </button>
                                                        <button class="btn btn-info btn-sm"> <i class="now-ui-icons ui-1_simple-add"></i> </button>
                                                    </div>
                                                </td>
                                                <td class="td-number">
                                                    <% let total_price_row = ele.product[0].price * ele.amount; total += total_price_row %>
                                                    <%= total_price_row.toLocaleString() %><small>đ</small>
                                                </td>
                                            </tr>
                                            <% }) %>
                                            <tr>
                                                <td colspan="3">
                                                </td>
                                                <td class="td-total">
                                                    Total
                                                </td>
                                                <td class="td-price">
                                                    <%= total.toLocaleString() %><small>đ</small>
                                                </td>
                                                <td colspan="3" class="text-right">
                                                    <button type="button" rel="tooltip" class="btn btn-success btn-round " data-original-title="" title="">
                                                        Purchase
                                                        <i class="now-ui-icons arrows-1_minimal-right"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--                 end tables -->
            </div>
        </div>
    </div>
</div>